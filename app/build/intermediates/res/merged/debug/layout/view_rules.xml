<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:id="@+id/lnnnnn">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:paddingStart="15dp"
        android:paddingLeft="15dp"
        android:id="@+id/image"/>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="17sp"
        android:textColor="@color/colorPrimaryDark"
        android:paddingStart="15dp"
        android:paddingLeft="15dp"
        android:paddingEnd="15dp"
        android:paddingRight="15dp"
        android:id="@+id/venue"/>

</LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/frm1"
        android:layout_below="@+id/lnnnnn"
        android:background="@drawable/frame_design"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4.2dp"
            android:weightSum="2"
            android:id="@+id/ln1">
            <TextView
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:ems="10"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.75"
                android:textAlignment="center"
                android:id="@+id/textviewconame"
                android:text="Event Coordinator"
                android:textSize="17sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp">
            <TextView
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:inputType="number"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.25"
                android:textAlignment="center"
                android:ems="10"
                android:textColor="@color/black"
                android:id="@+id/textviewcono"
                android:text="Mobile Number"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Call"
                android:id="@+id/button1"
                android:layout_weight="1"
                android:src="@drawable/call"
                android:background="@drawable/button_design_call"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"/>
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Message"
                android:id="@+id/button2"
                android:layout_weight="1"
                android:src="@drawable/msg"
                android:background="@drawable/button_design_msg"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>
        </LinearLayout>
    </FrameLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="19sp"
        android:layout_marginTop="10dp"
        android:paddingStart="15dp"
        android:paddingLeft="15dp"
        android:paddingEnd="15dp"
        android:paddingRight="15dp"
        android:layout_below="@+id/frm1"
        android:id="@+id/textviewrules"/>


</RelativeLayout>


</ScrollView>

